<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
    <url-pattern>/login/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
    <url-pattern>/logout/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Students</servlet-name>
    <servlet-class>controller.StudentsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Students</servlet-name>
    <url-pattern>/students</url-pattern>
    <url-pattern>/students/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>StudentsJSON</servlet-name>
    <servlet-class>controller.StudentsJSONServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StudentsJSON</servlet-name>
    <url-pattern>/students.json</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>InspectionWeeks</servlet-name>
    <servlet-class>controller.InspectionWeeksServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InspectionWeeks</servlet-name>
    <url-pattern>/inspectionweeks</url-pattern>
    <url-pattern>/inspectionweeks/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Inspections</servlet-name>
    <servlet-class>controller.InspectionsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Inspections</servlet-name>
    <url-pattern>/inspections</url-pattern>
    <url-pattern>/inspections/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Inspectors</servlet-name>
    <servlet-class>controller.InspectorsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Inspectors</servlet-name>
    <url-pattern>/inspectors</url-pattern>
    <url-pattern>/inspectors/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>InspectorsJSON</servlet-name>
    <servlet-class>controller.InspectorsJSONServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InspectorsJSON</servlet-name>
    <url-pattern>/inspectors.json</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Modules</servlet-name>
    <servlet-class>controller.ModulesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Modules</servlet-name>
    <url-pattern>/modules</url-pattern>
    <url-pattern>/modules/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ModulesJSON</servlet-name>
    <servlet-class>controller.ModulesJSONServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ModulesJSON</servlet-name>
    <url-pattern>/modules.json</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Availability</servlet-name>
    <servlet-class>controller.AvailabilityServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Availability</servlet-name>
    <url-pattern>/availability</url-pattern>
    <url-pattern>/availability/</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Keywords</servlet-name>
    <servlet-class>controller.KeywordsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Keywords</servlet-name>
    <url-pattern>/keywords</url-pattern>
    <url-pattern>/keywords/</url-pattern>
  </servlet-mapping>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <include-prelude>/taglibs.jsp</include-prelude>
    </jsp-property-group>
  </jsp-config>
</web-app>