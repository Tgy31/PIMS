<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xmlns="http://java.sun.com/xml/ns/javaee" xmlns:jsp="http://java.sun.com/xml/ns/javaee/jsp" xsi:schemaLocation="http://java.sun.com/xml/ns/javaee http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd" version="3.0">
  <servlet>
    <servlet-name>Test</servlet-name>
    <servlet-class>controller.TestServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Test</servlet-name>
    <url-pattern>/test</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Login</servlet-name>
    <servlet-class>controller.LoginServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Login</servlet-name>
    <url-pattern>/login</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Logout</servlet-name>
    <servlet-class>controller.LogoutServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Logout</servlet-name>
    <url-pattern>/logout</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Projects</servlet-name>
    <servlet-class>controller.ProjectsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Projects</servlet-name>
    <url-pattern>/projects</url-pattern>
    <url-pattern>/projects/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Students</servlet-name>
    <servlet-class>controller.StudentsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Students</servlet-name>
    <url-pattern>/students</url-pattern>
    <url-pattern>/students/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>StudentsJSON</servlet-name>
    <servlet-class>controller.StudentsJSONServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>StudentsJSON</servlet-name>
    <url-pattern>/students.json</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Inspectors</servlet-name>
    <servlet-class>controller.InspectorsServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Inspectors</servlet-name>
    <url-pattern>/inspectors</url-pattern>
    <url-pattern>/inspectors/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>InspectorsJSON</servlet-name>
    <servlet-class>controller.InspectorsJSONServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>InspectorsJSON</servlet-name>
    <url-pattern>/inspectors.json</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>Modules</servlet-name>
    <servlet-class>controller.ModulesServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>Modules</servlet-name>
    <url-pattern>/modules</url-pattern>
    <url-pattern>/modules/*</url-pattern>
  </servlet-mapping>
  <servlet>
    <servlet-name>ModulesJSON</servlet-name>
    <servlet-class>controller.ModulesJSONServlet</servlet-class>
  </servlet>
  <servlet-mapping>
    <servlet-name>ModulesJSON</servlet-name>
    <url-pattern>/modules.json</url-pattern>
  </servlet-mapping>
  <jsp-config>
    <jsp-property-group>
      <url-pattern>*.jsp</url-pattern>
      <include-prelude>/taglibs.jsp</include-prelude>
    </jsp-property-group>
  </jsp-config>
</web-app>